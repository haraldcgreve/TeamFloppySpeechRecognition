@model SpeechRecognition.Models.SpeechDetail

@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="layout">
        <div class="content-banner">
            <h1>Store Data</h1>
        </div>
        <div class="content box">
            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                if (Session["saved"] != null && (bool)Session["saved"] == true)
                {
                    <div class="block-group box">
                        <label style="color:green">Data has been saved to the database</label>
                    </div>
                    Session["saved"] = null;
                }

                <div class="block-group box">
                    <input type="file" name="file" accept="audio/wav" id="input-audio" class="input-audio" />
                    <label for="input-audio"><span></span> <strong><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"></path></svg> Choose a file…</strong></label>
                </div>
                <div class="block-group box">
                    <input type="submit" name="save-voice" class="save-voice" id="save-voice" value="Convert" />
                </div>
            }
            @using (Html.BeginForm("Save", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="block-group box">
                    @Html.TextAreaFor(x => x.ConversationText, new { rows = "10", cols = "50", @class = "load-texts" })
                </div>
                <div class="block-group box">
                    @Html.TextBoxFor(x => x.Email, new { @class = "email", name = "email", pattern = "[a-zA-Z0-9.-_]{1,}@[a-zA-Z.-]{2,}[.]{1}[a-zA-Z]{2,}", required = "true", placeholder = "Enter your Email" })
                </div>

                <div class="block-group box">
                    <input type="submit" name="submit-voice" class="submit-voice" id="submit-voice" value="Save" />
                </div>

            }
        </div>
    </div>
</div>
